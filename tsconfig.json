{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src"
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "include": [
      "./src/**/*"
  ]
}